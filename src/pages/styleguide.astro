<style lang="scss">
  $sizes: (
    "01": 3px,
    "02": 4px,
    "03": 6px,
    "04": 9px,
    "05": 12px,
    "06": 20px,
    "07": 24px,
    "08": 27px,
    "09": 30px,
    "10": 45px,
    "11": 72px,
    "12": 75px,
    "13": 120px,
  );

  .sizing-units {
    list-style: none;
    padding-left: 0;
  }

  .sizing-units__item {
    display: flex;
    flex-flow: row nowrap;
    align-items: start;
    column-gap: 12px;
    margin-bottom: 30px;
  }

  .sizing-units__preview {
    display: block;
    background-color: rgba(white, 0.2);
    border: 1px solid rgba(white, 0.4);
    width: 30px;
  }

  .sizing-units__label {
    line-height: 1;
  }

  @each $spacing_unit, $spacing_value in $sizes {
    .sizing__#{$spacing_unit} .sizing-units__preview {
      height: #{$spacing_value};
    }
  }
</style>

